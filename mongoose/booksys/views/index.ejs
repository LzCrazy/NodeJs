<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        table,tr,td{
            border:1px solid greenyellow;
        }
        td{
            padding: 10px;
        }
    </style>
</head>
<body>
<a href="/addedit">【增加图书】</a>
<table>
    <tr>
        <td>图书名字</td>
        <td>作者</td>
        <td>价格</td>
        <td>操作</td>
    </tr>
    <%for(var i=0;i<tushu.length;i++){%>
    <tr>
        <td><%=tushu[i].name%></td>
        <td><%=tushu[i].author%></td>
        <td><%=tushu[i].price%></td>
        <td><a href="/edit?id=<%=tushu[i].name%>">修改</a></td>
    </tr>
    <%}%>
</table>
</body>
</html>